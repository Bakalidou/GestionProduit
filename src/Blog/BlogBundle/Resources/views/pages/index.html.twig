{% extends 'BlogBundle:pages:layout.html.twig' %}
{% block body %}
<div class="row">
{% for success_message in app.session.flashbag.get('message')%}
  <div class="alert aler-success">{{success_message}}</div>
 {% endfor%}
 </div>
<div class="container">
<h3>List les Posts:</h3>

<a href="{{absolute_url(asset(''))}}post/create" 
class="btn btn-success ">Create Post</a>

<table class="table table-striped table-hover">
<thead>
<tr>
<th>#</th>
<th>Title</th>
<th>Description</th>
<th>Category</th>
<th>Action</th>
</tr>
</thead>
<tbody>
{%for post in posts %}
<tr>
<td> {{post.id}}</td>
<td>{{post.title}}</td>
<td>{{post.description}}</td>
<td>{{post.category}}</td>
<td>
<a href="{{absolute_url(path('pages/show_post_route',{'id':post.id}))}}"
class="btn btn-primary btn-sm">View</a>
<a href="{{absolute_url(path('pages/update_post_route',{'id':post.id}))}}"
class="btn btn-primary btn-sm">Edit</a>
<a href="{{absolute_url(path('pages/delete_post_route',{'id':post.id}))}}" class="btn btn-danger btn-sm">delete</a>
</td></tr>  
{% else %}
<tr>
<td>No Records Found!</td>
</tr>
{% endfor%}
</tbody>
</table>
</div>
{% endblock %}





